{% extends "layout.njk" %}

{% block content %}
<div class="card">
    <section 
        class="avatar" 
        style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover">
    </section>
    <section class="details">
        <h3>Detalhes</h3>
        <div class="item">
            <div>Teacher</div>
            <div>{{ teacher.name }}</div>
        </div>

        <div class="item">
            <div>Idade</div>
            <div>{{ teacher.age }}</div>
        </div>

        <div class="item">
            <div>Grau de Escolaridade</div>
            <div>{{ teacher.graduation }}</div>
        </div>

        <div class="item">
            <div>Tipo de Aula</div>
            <div>{{ "Presencial" if teacher.type == "Presencial" else "À Distância" }}</div>
        </div>

        <div class="item">
            <div>Área de Atuação</div>
            <div>
                {% for subject in teacher.subjects %}
                    <span>{{ subject }}</span>
                {% endfor %}
            </div>
        </div>

        <div class="item">
            <div>Desde</div>
            <div>{{ teacher.created_at }}</div>
        </div>

        <a href="/teachers/{{ teacher.id }}/edit" class="button" style="width: 40%">Editar</a>
        <form id="form-delete" method="POST" action="/teachers?_method=DELETE">
            <input 
                type="hidden" 
                name="id" 
                value={{teacher.id}}>
            <button type="submit" style="width: 40%">Deletar</button>
        </form>

    </section>

    {% include '../confirm.njk' %}
</div>

{% endblock content %}